server {
    listen 80;
    server_name leaderboard.ip2.space;
    return 301 https://$host$request_uri;
}

server {
    listen 443 ssl;
    server_name leaderboard.ip2.space;

    ssl_certificate /etc/letsencrypt/live/leaderboard.ip2.space/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/leaderboard.ip2.space/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    root /root/spictank/public;
    index index.html;

    location / {
        proxy_pass http://127.0.0.1:3001;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
    }

    location /api/ {
        proxy_pass http://127.0.0.1:3001;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
    }

    access_log /var/log/nginx/leaderboard.access.log;
    error_log /var/log/nginx/leaderboard.error.log;
}
